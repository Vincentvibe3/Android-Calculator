<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">@color/accent1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="EqualButton" parent="TextAppearance.MaterialComponents.Button">
