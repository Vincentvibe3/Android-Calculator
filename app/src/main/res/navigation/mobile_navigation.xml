<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_calculator">

    <fragment
        android:id="@+id/navigation_calculator"
        android:name="com.vincentvibe3.calculator.ui.calculator.CalculatorFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_calculator" />

    <fragment
        android:id="@+id/navigation_convert"
        android:name="com.vincentvibe3.calculator.ui.conversion.ConversionFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_conversion" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.vincentvibe3.calculator.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />
</navigation>